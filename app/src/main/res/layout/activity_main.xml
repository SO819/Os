<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.os.MainActivity"
    android:weightSum="1"
    android:orientation="horizontal">


    <ImageButton
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:onClick="onClick"
        android:background="#79dfac"
        android:src="@drawable/nima"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/imageView6" />
    <!--왼쪽버튼-->
    <ImageButton
        android:id="@+id/imageView5"
        android:onClick="onClick"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:clickable="true"
        android:background="#79dfac"
        android:src="@drawable/nima5"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/imageView6" />
    <!--오른쪽버튼-->
    <ImageButton
        android:id="@+id/imageView6"
        android:onClick="onClick"
        android:layout_width="150dp"
        android:clickable="true"
        android:layout_height="80dp"
        android:background="#79dfac"
        android:src="@drawable/nima6"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/imageView3" />
    <!--가운데 버튼-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="용산03"
        android:textSize="50dp"
        android:layout_above="@+id/imageView5"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView2" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#c1c7c4"
        android:src="@drawable/nima3"
        android:layout_marginBottom="125dp"
        android:id="@+id/imageView5"
        android:layout_above="@+id/imageView3"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#79dfac"
        android:src="@drawable/nima2"
        android:id="@+id/imageView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:src="@drawable/bus2"
        android:layout_above="@+id/textView2"
        android:id="@+id/imageView6"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="용산03 알리미"
        android:textSize="30dp"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_alignEnd="@+id/textView2"
        android:layout_marginBottom="12dp" />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/home"
        android:layout_alignTop="@+id/imageView7"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView8" />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/so"
        android:layout_marginEnd="34dp"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:id="@+id/imageView7" />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/wi"
        android:id="@+id/imageView9"
        android:layout_alignTop="@+id/imageView8"
        android:layout_toStartOf="@+id/imageView6"
        android:layout_marginEnd="37dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상세 조회"
        android:textSize="15dp"
        android:id="@+id/textView4"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView9" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="홈"
        android:textSize="15dp"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView3" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설정"
        android:textSize="15dp"
        android:id="@+id/textView5"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/imageView7"
        android:layout_marginEnd="10dp" />
</RelativeLayout>
